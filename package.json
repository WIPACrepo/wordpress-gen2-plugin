{
    "name": "@WIPACrepo/wordpress-gen2-plugin",
    "version": "1.0.4",
    "private": true,
    "description": "IceCube-Gen2 website WordPress customizations",
    "license": "MIT",
    "homepage": "https://github.com/WIPACrepo/wordpress-gen2-plugin/",
    "repository": "git+https://github.com/WIPACrepo/wordpress-gen2-plugin.git",
    "devDependencies": {
        "@wordpress/env": "^4.6.0",
        "@wordpress/scripts": "^23.0.0",
        "copy-webpack-plugin": "^10.2.4",
        "eslint-plugin-prettier": "^4.0.0",
        "prettier": "npm:wp-prettier@^2.6.2"
    },
    "prettier": "@wordpress/prettier-config",
    "stylelint": {
        "extends": "@wordpress/stylelint-config",
        "rules": {
            "indentation": 4,
            "number-leading-zero": null
        }
    },
    "scripts": {
        "start": "wp-scripts start --webpack-copy-php",
        "build:blocks": "wp-scripts build --webpack-copy-php --webpack-src-dir=blocks-src --output-path=blocks",
        "build:public": "wp-scripts build --webpack-copy-php --webpack-src-dir=public-src --output-path=public",
        "build": "npm run build:blocks && npm run build:public",
        "lint:css": "wp-scripts lint-style",
        "lint:js": "wp-scripts lint-js --no-error-on-unmatched-pattern ./*src/**/*.js",
        "lint:md:docs": "wp-scripts lint-md-docs",
        "format:js": "wp-scripts format",
        "lint:js:fix": "npm run lint:js -- --fix",
        "lint:pkg-json": "wp-scripts lint-pkg-json",
        "test": "wp-scripts test-unit-js",
        "env:start": "wp-env start",
        "env:start:debug": "wp-env start --xdebug",
        "env:stop": "wp-env stop",
        "packages-update": "wp-scripts packages-update",
        "plugin-zip": "wp-scripts plugin-zip"
    },
    "files": [
        "blocks",
        "includes",
        "wordpress-gen2-plugin.php"
    ]
}